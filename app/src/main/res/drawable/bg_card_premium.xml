<!-- ✨ PREMİUM KART - Glassmorphism Efektli                        -->
<!-- ═══════════════════════════════════════════════════════════════ -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dış gölge -->
    <item android:top="4dp" android:left="3dp" android:right="3dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#25000000" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <!-- Ana kart - Cam efekti -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#F8FFFFFF" android:centerColor="#F0FFFFFF" android:endColor="#E8F5FF" android:angle="135" android:type="linear" />
            <corners android:radius="24dp" />
            <stroke android:width="1.5dp" android:color="@color/glass_border" />
        </shape>
    </item>
    <!-- Üst parlaklık highlight -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#40FFD700" android:endColor="#00FFD700" android:angle="270" android:type="linear" />
            <corners android:radius="23dp" />
        </shape>
    </item>
</layer-list>
